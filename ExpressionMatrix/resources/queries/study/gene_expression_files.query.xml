<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="gene_expression_files" tableDbType="TABLE">
                <buttonBarOptions position="both" includeStandardButtons="true">
                    <includeScript>ExpressionMatrix/CreateMatrix.js</includeScript>
                    <item text="Create Matrix" requiresSelection="true" permission="UPDATE" insertPosition="end">
                        <!-- 'return false' prevents '#' from showing up on the URL -->
                        <onClick>createMatrixClick(dataRegion); return false;</onClick>
                    </item>
                </buttonBarOptions>
            </table>
        </tables>
    </metadata>
</query>
